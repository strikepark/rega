html,
body,
.layout,
.content
	font normal 100% 'PT Sans', 'Helvetica Neue', 'Helvetica', 'Verdana', 'Geneva CY', 'DejaVu Sans', sans-serif
	line-height 1.5
	height 100%
	background rgba(236, 240, 241,1)

.full-page
	width 100%
	min-height 100%
	background #212121

.fp-load
	background #212121
	height 100%
	display flex
	justify-content center
	align-items center

.fp-load__spin
	width 64px
	height 64px
	background #212121 url(../i/spin_big.gif)

.fp__close
	width 30px
	height 30px
	background transparent
	border none
	cursor pointer
	overflow hidden
	white-space nowrap
	text-overflow ellipsis
	position absolute
	margin-top 20px
	right 15px
	outline none
	&::before
		-webkit-transform rotate(45deg)
		-ms-transform rotate(45deg)
		-o-transform rotate(45deg)
		transform rotate(45deg)
		content ""
		display block
		height 60px
		width 60px
		left 12px
		border: 1px solid rgba(255,255,255,1)
		position absolute
		top 0
	&::after
		-webkit-transform rotate(45deg)
		-ms-transform rotate(45deg)
		-o-transform rotate(45deg)
		transform rotate(45deg)
		content ""
		display block
		height 60px
		width 60px
		left -42px
		border 1px solid rgba(255,255,255,1)
		position absolute
		top 0
	&:hover
		&::before,
		&::after
			border-color rgba(255,255,255,.8)

.fp-content
	max-width 300px
	width 90%
	margin 0 auto
	padding 40px 0 60px 0

.fp-field
	margin-bottom 2rem

.fp-field-isStaff
	margin-top 1.5rem

.fp-field__label
	display block
	color rgba(166,166,166,1)
	font-weight 400
	margin-bottom .25rem
	font normal 100% 'PT Sans', 'Helvetica Neue', 'Helvetica', 'Verdana', 'Geneva CY', 'DejaVu Sans', sans-serif

.fp-field__textarea,
.fp-field__input
	display block
	font normal 100% 'PT Sans', 'Helvetica Neue', 'Helvetica', 'Verdana', 'Geneva CY', 'DejaVu Sans', sans-serif
	border 2px solid rgba(86,86,86,1)
	background transparent
	border-radius 2px
	outline none
	padding 10px 8px
	width 100%
	color #fff
	&::-webkit-input-placeholder
		font normal 100% 'PT Sans', 'Helvetica Neue', 'Helvetica', 'Verdana', 'Geneva CY', 'DejaVu Sans', sans-serif
		color rgba(142,142,142,1)
	&:-moz-placeholder
		font normal 100% 'PT Sans', 'Helvetica Neue', 'Helvetica', 'Verdana', 'Geneva CY', 'DejaVu Sans', sans-serif
		color rgba(142,142,142,1)
	&::-moz-placeholder
		font normal 100% 'PT Sans', 'Helvetica Neue', 'Helvetica', 'Verdana', 'Geneva CY', 'DejaVu Sans', sans-serif
		color rgba(142,142,142,1)
	&:-ms-input-placeholder
		font normal 100% 'PT Sans', 'Helvetica Neue', 'Helvetica', 'Verdana', 'Geneva CY', 'DejaVu Sans', sans-serif
		color rgba(142,142,142,1)
	&:focus
		border-color rgba(186,186,186,1)
		&::-webkit-input-placeholder
			font normal 100% 'PT Sans', 'Helvetica Neue', 'Helvetica', 'Verdana', 'Geneva CY', 'DejaVu Sans', sans-serif
			color rgba(169,169,169,1)
		&:-moz-placeholder
			font normal 100% 'PT Sans', 'Helvetica Neue', 'Helvetica', 'Verdana', 'Geneva CY', 'DejaVu Sans', sans-serif
			color rgba(169,169,169,1)
		&::-moz-placeholder
			font normal 100% 'PT Sans', 'Helvetica Neue', 'Helvetica', 'Verdana', 'Geneva CY', 'DejaVu Sans', sans-serif
			color rgba(169,169,169,1)
		&:-ms-input-placeholder
			font normal 100% 'PT Sans', 'Helvetica Neue', 'Helvetica', 'Verdana', 'Geneva CY', 'DejaVu Sans', sans-serif
			color rgba(169,169,169,1)
	&:disabled
		border-color rgba(86,86,86,1)
		background rgba(46,46,46,1)
		color rgba(169,169,169,1)
		cursor default

.fp-field__radio
		display none

.fp-field-status__absent-label,
.fp-field-status__present-label,
.fp-field-status__left-label
	float left
	line-height 1.8
	background transparent
	border 2px solid rgba(86,86,86,1)
	padding 7px 0
	text-align center
	width 33.3%
	font normal 15px 'PT Sans', 'Helvetica Neue', 'Helvetica', 'Verdana', 'Geneva CY', 'DejaVu Sans', sans-serif
	color rgba(255,255,255,.8)
	cursor pointer
	&:hover
		background rgba(0,0,0,.2)

.fp-field-status__absent-label
	border-top-left-radius 4px
	border-bottom-left-radius 4px

.fp-field-status__present-label
	border-left none

.fp-field-status__left-label
	border-left none
	border-top-right-radius: 4px;
	border-bottom-right-radius: 4px;


.fp-field__radio:checked + .fp-field-status__absent-label,
.fp-field__radio:checked + .fp-field-status__present-label,
.fp-field__radio:checked + .fp-field-status__left-label
	background rgba(46,46,46,1)
	color rgba(169,169,169,1)
	cursor default

.fp-field__radio:disabled + .fp-field-status__absent-label,
.fp-field__radio:disabled + .fp-field-status__present-label,
.fp-field__radio:disabled + .fp-field-status__left-label
	background rgba(46,46,46,1)
	color rgba(169,169,169,1)
	cursor default

.fp-field__label--checkbox
	display block
	padding-left 26px
	text-indent -26px
	color rgba(166,166,166,1)
	font-size 15px

.fp-field__input--checkbox
	outline none
	-webkit-appearance none
	-moz-appearance none
	-ms-appearance none
	-o-appearance none
	appearance none
	border: none
	width 18px
	height 18px
	padding 0
	margin 0
	vertical-align bottom
	position relative
	top -2px
	outline none
	*overflow hidden
	cursor pointer
	transition all 0.2s ease
	border 2px solid rgba(86,86,86,1)
	border-radius 2px
	&:hover
		border-color rgba(186,186,186,1)
	&:active
		-webkit-transform scale(.9)
		-ms-transform scale(.9)
		transform scale(.9)
	&:checked
		transition none
		border-color #5a79b0
		background #5a79b0 url('../i/checkbox.png') no-repeat 1px 2px
	&:disabled
		border-color rgba(86,86,86,1)
		background rgba(46,46,46,1)
		color rgba(169,169,169,1)
		cursor default

.fp-field__error
	display none

.fp-field--error .fp-field__input
	border-color #ff8a76
	background #2e2726

.fp-field--error .fp-field__error
	display block
	font-size 13px
	color rgba(166,166,166,1)

.fp-field__button
	background #5a79b0
	width 100%
	outline none
	border none
	border-radius 3px
	margin-top 1rem
	color #fff
	padding 16px 0
	font bold 100% 'PT Sans', 'Helvetica Neue', 'Helvetica', 'Verdana', 'Geneva CY', 'DejaVu Sans', sans-serif
	cursor pointer
	&:hover
		background #394964
		color rgba(131,140, 156, 1)
	&:active
		box-shadow 0 1px 5px -1px rgba(0, 0, 0, .9) inset
	&:disabled
		background #394964
		color rgba(131,140, 156, 1)
		cursor default

.fp-alert
	position relative
	width 100%
	height 60px
	display none

.fp-alert__text__link
	color #fff
	text-decoration none
	border-bottom 1px solid rgba(255,255,255,.3)

.fp-alert--success
	background rgba(39, 174, 96,1)

.fp-alert--error
	background rgba(192, 57, 43,1)

.fp-alert__text
	padding 0 50px 0 30px
	font normal 100% 'PT Sans', 'Helvetica Neue', 'Helvetica', 'Verdana', 'Geneva CY', 'DejaVu Sans', sans-serif
	line-height 60px
	color rgba(255,255,255,.9)

.fp-alert__close
	width 15px
	height 15px
	position absolute
	right 30px
	top 50%
	overflow hidden
	cursor pointer
	margin-top -8px
	&::before
		transform rotate(45deg)
		content ""
		display block
		height 30px
		left 5px
		border 1px solid #fff
		position absolute
		top 0
		width 30px
	&::after
		transform rotate(45deg)
		content ""
		display block
		height 30px
		left -20px
		border 1px solid #fff
		position absolute
		top 0
		width 30px

.fp-field__img--select
	width 300px
	height 46px
	background url(../i/select.png)

// Chosen styles
.chosen-container
	font 300 16px/1.5 'Roboto' sans-serif
	border 2px solid rgba(86,86,86,1)
	box-shadow none
	background transparent
	border-radius 2px

.chosen-container-single .chosen-single
	display block
	font-family 'Roboto' sans-serif
	font-weight 300
	border none
	box-shadow none
	background transparent
	padding 10px 6px
	width 100%
	color #fff
	height 42px

.chosen-container-single .chosen-default
	border none

.chosen-container-single .chosen-single span
	font 300 16px/1.5 'Roboto' sans-serif
	color rgba(169,169,169,1)

.chosen-container-single .chosen-single div
	top 17px
	right 12px

.chosen-container-single .chosen-single div b
	background url("../i/arrow2.png") no-repeat

.chosen-container .chosen-drop
	border none
	background #fff
	box-shadow none
	margin-top .5rem
	border-radius 3px

.chosen-container-active .chosen-container
	border none
	box-shadow none

.chosen-container-active.chosen-with-drop .chosen-single
	border none
	background transparent
	box-shadow none

.chosen-container-active.chosen-with-drop .chosen-single div
	top 17px
	right 12px

.chosen-container-active.chosen-with-drop .chosen-single div b
	background url("../i/arrow3.png") no-repeat

.chosen-container-multi
	padding 10px 6px

.chosen-container-multi .chosen-choices
	position relative
	overflow hidden
	margin 0
	padding 0
	width 100%
	cursor text
	border-color #212121
	background #212121
	box-shadow none
	color rgba(169,169,169,1) !important

.search-field
	margin 0
	padding 0
	outline none
	border-color #212121
	background #212121
	box-shadow none
	color rgba(169,169,169,1) !important

.search-field input
	border-color #212121
	background #212121
	box-shadow none
	color rgba(169,169,169,1) !important

.chosen-container-active .chosen-choices li.search-field input[type=text]
	color: rgba(169,169,169,1) !important

.chosen-container-multi .chosen-choices li.search-choice
	position relative
	margin 3px 5px 3px 0
	padding 4px 20px 4px 5px
	border none
	max-width 100%
	border-radius 2px
	background rgba(46,46,46,1)
	box-shadow none
	color #999
	cursor default

.chosen-container-multi .chosen-choices li.search-choice .search-choice-close
	position absolute
	top 5px
	right 3px
	display block
	width 12px
	height 12px

.chosen-container-multi .chosen-choices li.search-choice-focus
	background none

.chosen-container-single .chosen-single abbr
	top 16px
	right 40px